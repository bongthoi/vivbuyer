<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title><%=title%></title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/png" href="/public/images/favicon.png" />

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- <link rel="stylesheet" type="text/css" href="css/products.css"> -->
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
  
    <link rel="stylesheet"  href="/public/css/index.css" type="text/css">
    

    <script src="/public/js/main.js" type="text/javascript"></script>
    
</head>

<body>
    <!-- header -->    
    <% include partials/header %>
    <!-- menu Bar -->
    <% include partials/menubar %>
    <!-- slides -->
    <% include partials/slides%>
    <!-- breadcrumb -->    
    <% include partials/breadcrumb%>

    <section class="content">

        <!-- Your Page Content Here -->

        <%if(products.length>0){%>
          <div class="cart page">
            <ul class="list-group">
                <li class="list-group-item clearfix">
                    <div class="col-xs-1"><strong>STT</strong></div>
                    <div class="col-xs-2"><strong>Product Name</strong></div>
                    <div class="col-xs-2 text-right"><strong>Unit Price</strong></div>
                    <div class="col-xs-2 text-right"><strong>Quantity</strong></div>
                    <div class="col-xs-3 text-right"><strong>SubTotal</strong></div>
                    <div class="col-xs-2 text-right"><strong>Operator</strong></div>
                  </li>
              <%for(var i=0;i<products.length;i++){%>
                <li class="list-group-item clearfix">
                  <div class="col-xs-1">
                        <strong><%=i+1%></strong><br/>                    
                  </div>
                  <div class="col-xs-2">
                    <strong><%=products[i].item.name%></strong><br/>                    
                  </div>
                  <div class="col-xs-2 text-right">
                    <span class="badge"><%=products[i].item.cost_price%></span>
                  </div>
                  <div class="col-xs-2 text-right">
                    <span class="badge"><%=products[i].quantity%></span>
                  </div>
                  <div class="col-xs-3 text-right">
                    <%=products[i].subtotal%> GLO
                  </div>
                  <div class="col-xs-2 text-right">
                    <a href="/cart/remove/<%=products[i].item.id%>"><i class="fa fa-trash-o"></i></a>
                  </div>
                </li>
                <%}%>
            </ul>
          </div>
          <div class="text-right">
            <strong>Total: <%=totalPrice%> GLO</strong>
          </div>
          <hr>
          <div class="text-right">
            <a href="/cart/deleteall" type="button" class="btn btn-danger">Delete All</a>
            <a href="/" type="button" class="btn btn-info">Continue Shopping</a>
            <a href="/users/login" type="button" class="btn btn-success">Checkout</a>
          </div>              
          <%}else{%>Your shopping cart is empty.
            <%}%>
      </section>
    <!-- footer -->
    <% include partials/footer%>
</body>

</html>